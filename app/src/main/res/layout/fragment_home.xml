<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_fragment_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_welcome"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/home_fragment_tip2"
        android:layout_below="@id/home_fragment_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_baker_engrave"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:textSize="26sp"/>

    <Button
        android:id="@+id/experience_start"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/home_fragment_tip2"
        android:layout_marginTop="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/selector_bg_20_radius"
        android:textColor="@drawable/selector_text_button"
        android:textSize="18sp"
        android:enabled="true"
        android:text="点我开始体验"/>
</RelativeLayout>